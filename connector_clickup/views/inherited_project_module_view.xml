<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Inherited project.project model form view to add external_id, clickup_backend_id -->
    <record id="inherit_project_project_form_view" model="ir.ui.view">
        <field name="name">Project project Inherit Form</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project" />
        <field name="arch" type="xml">
            <header>
                <button
                    attrs="{'invisible': [('external_id', '=', False)]}"
                    class="btn-primary"
                    name="update_project"
                    string="Update Project Now"
                    type="object"
                />
                <button
                    attrs="{'invisible': [('external_id', '=', False)]}"
                    name="open_clickup_project"
                    string="Open Project in ClickUp"
                    type="object"
                    class="oe_highlight"
                />
                <button
                    attrs="{'invisible': [('external_id', '=', False)]}"
                    name="export_to_clickup_project"
                    string="Export Changes in Clickup"
                    type="object"
                    class="oe_highlight"
                />
                 <button
                    attrs="{'invisible': [('external_id', '!=', False)]}"
                    name="export_project_to_clickup_project"
                    string="Export Project in Clickup"
                    type="object"
                    class="oe_highlight"
                />
            </header>
            <xpath expr="//page[@name='settings']" position="after">
                <page
                    string="Connector Clickup Project"
                    attrs="{'invisible': [('external_id', '=', False)]}"
                >
                    <field invisible="1" name="clickup_bind_ids" />
                    <group>
                        <field name="external_id" />
                        <field name="clickup_backend_id" />
                        <field name="api_token_data" />
                        <field name="created_at" />
                    </group>
                </page>
            </xpath>
        </field>
    </record>
     <!-- Inherited project.task model form view to add external_id, clickup_backend_id -->
    <record id="inherit_project_task_form_view" model="ir.ui.view">
        <field name="name">Project task Inherit Form</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2" />
        <field name="arch" type="xml">
            <header>
                <button
                    attrs="{'invisible': [('external_id', '=', False)]}"
                    class="btn-primary"
                    name="update_task"
                    string="Update Task Now"
                    type="object"
                />
                <button
                    attrs="{'invisible': [('external_id', '=', False)]}"
                    name="open_clickup_task"
                    string="Open Task in ClickUp"
                    type="object"
                    class="oe_highlight"
                />
                <button
                    attrs="{'invisible': ['|', ('external_id', '!=', False), ('disable_button', '=', True)]}"
                    name="export_task_to_clickup_task"
                    string="Export Task in Clickup"
                    type="object"
                    class="oe_highlight"
                />
                <button
                    attrs="{'invisible': [('external_id', '=', False)]}"
                    name="export_changes_to_clickup_task"
                    string="Export Changes in Clickup"
                    type="object"
                    class="oe_highlight"
                />
                <field name="disable_button" />
            </header>
            <xpath expr="//page[@name='extra_info']" position="after">
                <page
                    string="Connector Clickup Task"
                    attrs="{'invisible': [('external_id', '=', False)]}"
                >
                    <field invisible="1" name="clickup_bind_ids" />
                    <group>
                        <field name="external_id" />
                        <field name="clickup_backend_id" />
                        <field name="api_token_data" />
                        <field name="created_at" />
                        <field name="updated_at" />
                    </group>
                </page>
            </xpath>
        </field>
    </record>
     <!-- Inherited project.task.type model form view to add external_id, clickup_backend_id -->
    <record id="inherit_project_task_type_form_view" model="ir.ui.view">
        <field name="name">Project task type Inherit Form</field>
        <field name="model">project.task.type</field>
        <field name="inherit_id" ref="project.task_type_edit" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='description']" position="after">
                <notebook>
                    <page
                        string="Connector Clickup Stage"
                        attrs="{'invisible': [('external_id', '=', False)]}"
                    >
                        <field invisible="1" name="clickup_bind_ids" />
                        <group>
                            <field name="external_id" />
                            <field name="clickup_backend_id" />
                            <field name="api_token_data" />
                        </group>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>
</odoo>
