<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

        <!-- Clickup backend model form view  -->
        <record id="view_clickup_backend_form" model="ir.ui.view">
            <field name="name">clickup.backend.form</field>
            <field name="model">clickup.backend</field>
            <field name="arch" type="xml">
                <form string="Clickup Backend">
                    <header>
                        <button
                        attrs="{'invisible': [('auth_type', '=', 'api_key')]}"
                        class="oe_highlight"
                        help="After providing the client id,client secret and redirect url click this button to generate the Auth code."
                        name="generate_auth_code"
                        string="Generate Oauth Code"
                        type="object"
                    />
                        <button
                        attrs="{'invisible': [('auth_type', '=', 'api_key')]}"
                        class="oe_highlight"
                        help="After providing the url in Auth Code field click to get the Access Token"
                        name="generate_token"
                        string="Generate Token"
                        type="object"
                    />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button
                            class="oe_stat_button"
                            icon="fa-play"
                            name="toggle_test_mode"
                            type="object"
                        >
                                <field invisible="1" name="test_mode" />
                                <span
                                attrs="{'invisible': [('test_mode', '=', True)]}"
                                class="o_stat_text text-success"
                            >Production</span>
                                <span
                                attrs="{'invisible': [('test_mode', '=', False)]}"
                                class="o_stat_text text-warning"
                            >Test</span>
                            </button>
                        </div>
                        <widget
                        attrs="{'invisible': [('test_mode', '=', False)]}"
                        bg_color="bg-warning"
                        name="web_ribbon"
                        title="Test Mode"
                    />
                        <widget
                        attrs="{'invisible': [('test_mode', '=', True)]}"
                        bg_color="bg-success"
                        name="web_ribbon"
                        title="Production"
                    />
                        <group>
                            <group>
                                <field
                                name="name"
                                placeholder="Ex:-Test 1"
                                style="font-size:13pt;"
                            />
                                <field name="auth_type" />
                            </group>
                            <group attrs="{'invisible': [('test_mode', '=', True)]}">
                                <field
                                attrs="{'invisible': [('auth_type', '=', 'api_key')]}"
                                name="redirect_url"
                                placeholder="http://localhost:8090"
                            />
                                <field
                                attrs="{'invisible': [('auth_type', '=', 'api_key')]}"
                                name="client_id"
                            />
                                <field
                                attrs="{'invisible': [('auth_type', '=', 'api_key')]}"
                                name="client_secret"
                                password="True"
                            />
                                <field
                                attrs="{'invisible': [('auth_type', '=', 'api_key')]}"
                                name="auth_code"
                            />
                            </group>
                            <group attrs="{'invisible': [('test_mode', '=', True)]}">
                                <field
                                attrs="{'readonly': [('auth_type', '=', 'Oauth')]}"
                                name="api_key"
                            />
                                <field
                                name="url_path"
                                placeholder="https://api.clickup.com"
                            />
                                <field name="version" />
                                <field name="uri" />
                            </group>
                            <group attrs="{'invisible': [('test_mode', '=', False)]}">
                                <field
                                attrs="{'invisible': [('auth_type', '=', 'api_key')]}"
                                name="redirect_url"
                                placeholder="http://localhost:8090"
                            />
                                <field
                                attrs="{'invisible': [('auth_type', '=', 'api_key')]}"
                                name="client_id_test"
                            />
                                <field
                                attrs="{'invisible': [('auth_type', '=', 'api_key')]}"
                                name="client_secret_test"
                                password="True"
                            />
                                <field
                                attrs="{'invisible': [('auth_type', '=', 'api_key')]}"
                                name="auth_code_test"
                            />
                            </group>
                            <group attrs="{'invisible': [('test_mode', '=', False)]}">
                                <field
                                attrs="{'readonly': [('auth_type', '=', 'Oauth')]}"
                                name="test_token"
                            />
                                <field
                                name="url_path_test"
                                placeholder="https://api.clickup.com"
                            />
                                <field name="version_test" />
                                <field name="test_location" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Basic Information">
                                <span
                            >Please refer the Documentation regarding this module in order to utilize and experience this
                               in best possible way.
                            </span>
                                <button
                                class="oe_highlight"
                                name="redirect_action"
                                string="Read Me"
                                type="object"
                            />
                            </page>
                            <page string="Import">

                                <span style="margin-right: 10px;">
                                    <b>Click to Import Projects of ClickUp</b>
                                </span>
                                <button
                                class="oe_highlight"
                                name="import_projects"
                                string="Import Projects"
                                type="object"
                            />
                                <group />
                                <group />
                                <br />
                                <span style="margin-right: 19px; ">
                                    <b>Click to Import Stages of ClickUp</b>
                                </span>
                                <button
                                class="oe_highlight"
                                name="import_stages"
                                string="Import Stages"
                                type="object"
                            />
                                <group />
                                <group />
                                <br />
                                <span style="margin-right: 27px;">
                                    <b>Click to Import Tasks of ClickUp</b>
                                </span>
                                <button
                                class="oe_highlight"
                                name="import_tasks"
                                string="Import Tasks"
                                type="object"
                            />
                                <group>
                                    <field name="force_update_tasks" />
                                    <field
                                    name="datetime_filter_task"
                                    class="oe_inline"
                                />
                                </group>
                                <group />
                            </page>
                            <page string="Advance Configuration">
                                <group>
                                    <group>
                                        <field name="company_id" />

                                        <field name="team_id" />
                                    </group>
                                </group>
                            </page>
                            <page string="Export">
                                <span style="margin-right: 10px;">
                                    <b>Click to Export Projects In ClickUp remote</b>
                                </span>
                                <button
                                class="oe_highlight"
                                name="export_projects"
                                string="Export Projects"
                                type="object"
                            />
                                <group />
                                <br />
                                <span style="margin-right: 27px;">
                                    <b>Click to Export Tasks In ClickUp remote</b>
                                </span>
                                <button
                                class="oe_highlight"
                                name="export_tasks"
                                string="Export Tasks"
                                type="object"
                            />
                                <group />
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

    <!-- Clickup backend model tree view -->
    <record id="view_clickup_backend_tree" model="ir.ui.view">
        <field name="name">clickup.backend.tree</field>
        <field name="model">clickup.backend</field>
        <field name="arch" type="xml">
            <tree string="Clickup Backend">
                <field name="name" />
                <field name="auth_type" />
            </tree>
        </field>
    </record>
    <!-- Clickup backend model action -->
    <record id="action_clickup_backend" model="ir.actions.act_window">
        <field name="name">Clickup Backend</field>
        <field name="res_model">clickup.backend</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_clickup_backend_tree" />
    </record>
    <!-- menu button -->
    <menuitem
        id="menu_clickup_root"
        name="Clickup"
        parent="connector.menu_connector_root"
    />
    <menuitem
        action="action_clickup_backend"
        id="menu_clickup_backend"
        name="Backends"
        parent="menu_clickup_root"
        sequence="2"
    />
</odoo>
