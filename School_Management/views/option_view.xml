<?xml version="1.0" encoding="utf-8"?>
 <odoo>
        <!-- menu list -->

<!-- option mainsub button -->

        <menuitem id="option_sub_menu"
         name="Option"
         parent="school_menu_root"
         sequence="2"
        />

<!-- feedback sub button -->

        <menuitem id="feedback_menu"
         name="Feedback"
         action="action_feedback_option"
         parent="option_sub_menu"
         sequence="1"
        />

<!-- calendar sub button -->

        <menuitem id="Calendar_menu"
         name="Event Calendar"
         action="action_calendar_option"
         parent="option_sub_menu"
         sequence="2"
        />

<!-- hobbies sub button -->

        <menuitem id="hobbies_menu"
         name="Hobbies"
         action="action_hobbies"
         parent="option_sub_menu"
         sequence="3"
        />

<!-- Attendance sub button -->

        <menuitem id="attendance_sub_menu"
         name="Attendance"
         action="action_attendance_option"
         parent="option_sub_menu"
         sequence="4"
        />

         <!-- feedback form,list,kanban,graph and action -->

<!-- feedback action -->

    <record id="action_feedback_option" model="ir.actions.act_window">
       <field name="name">feedback option</field>
       <field name="res_model">feedback.option</field>
       <field name="view_mode">tree,form,graph,kanban</field>
    </record>

<!-- feedback list -->

    <record id="feedback_list_view" model="ir.ui.view">
        <field name="name">feedback.list</field>
        <field name="model">feedback.option</field>
        <field name="arch" type="xml">
            <tree>
                <field name="badges" />
                <field name = "name"/>
                <field name = "Schoolname_id" />
                <!-- widget="dynamic_popover_char"
                options="{'max_width': '350px', 'line_clamp': '3'} -->
                <field name="subject"/>
                 <!-- string="Subject" widget="char_emojis" -->
                <field name = "note"/>
                <field name="priority" widget="priority"/>
                <field name = "date" />
                <field name = "Schoolphone" />
            </tree>
        </field>
    </record>

<!-- feedback form -->

    <record id="feedback_form_view" model="ir.ui.view">
        <field name="name">feedback.form</field>
        <field name="model">feedback.option</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" text="review" bg_color="bg-success" />   <!--bg-primary and bginfo -->
                        <group>
                            <group>
                                <field name="badges" />
                                <field name = "name" />
                                <field name="subject" widget="CopyClipboardChar"/>     <!-- string="Subject" widget="char_emojis" -->
                                <field name = "note" widget="CopyClipboardText"/>
                            </group>
                            <group>
                                <field name="priority" widget="priority"/>
                                <field name = "date"/>
                                <field name = "Schoolname_id"/>
                                <field name = "Schoolphone" />
                            </group>
                        </group>
                </sheet>
            </form>
        </field>
    </record>

<!-- feedback graph -->

    <record  id="feedback_graph_view" model="ir.ui.view">
        <field name="name">feedback.graph</field>
        <field name="model">feedback.option</field>
        <field name="arch" type="xml">
            <graph string="review">
                <!-- <field name="name" type="row"/> -->
                <field name="priority" type="col"/>
            </graph>
        </field>
    </record>

<!-- feedback kanban -->

    <record id="feedback_kanban_view" model="ir.ui.view">
        <field name="name">feedback.kanban</field>
        <field name="model">feedback.option</field>
        <field name="arch" type="xml">
            <kanban class="o_res_partner_kanban">
                <field name="id"/>
                <field name="badges" />
                <field name = "name" />
                <field name = "Schoolname_id" />
                <field name="subject" widget="CopyClipboardChar"/>
                <field name = "note" widget="CopyClipboardText"/>
                <field name="priority" widget="priority"/>
                <field name = "date" />

                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                     <label for="badges">Name:</label>
                                    <field name="badges"/>
                                    <field name="name"/>
                                    <div t-if="record.Schoolname_id.value">
                                         <label for="Schoolname_id">School Name:</label>
                                        <t  t-esc="record.Schoolname_id.value"/>
                                    </div>
                                    <div t-if="record.priority.value">
                                         <label for="priority">Review:</label>
                                        <t  t-esc="record.priority.value"/>
                                    </div>
                                </strong>
                                <div t-if="record.subject.value">
                                     <label for="subject">Description:</label>
                                    <t t-esc="record.subject.value"/>
                                </div>
                                <div t-if="record.note.value">
                                     <label for="note">Note:</label>
                                    <t t-esc="record.note.value"/>
                                </div>
                                <div t-if="record.date.value">
                                     <label for="date">Date of review:</label>
                                    <t t-esc="record.date.value"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


        <!-- Eventcalendar list,form,calendar and action -->

<!-- calendar list -->

    <record id="calendar_list_view" model="ir.ui.view">
        <field name="name">calendar.list</field>
        <field name="model">calendar.option</field>
        <field name="arch" type="xml">
            <tree>
                <field name = "name"/>
                <field name="sub"/>
                <field name = "event"/>
                <field name = "date_start" />
                <field name = "date_end" />
            </tree>
        </field>
    </record>

<!-- calendar form -->

    <record id="calender_form_view" model="ir.ui.view">
        <field name="name">calendar.form</field>
        <field name="model">calendar.option</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" text="Event" bg_color="bg-danger" />
                    <group>
                        <h2>
                            <group>
                                <field name = "name"/>
                            </group>
                        </h2>
                        <group>
                        </group>
                        <group>
                            <field name="sub"/>
                            <field name = "event"/>
                            <field name = "date_start" />
                            <field name = "date_end" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

<!-- calendar view -->

    <record id="calendar_view" model="ir.ui.view">
        <field name="name">calendarview.calendar</field>
        <field name="model">calendar.option</field>
        <field name="arch" type="xml">
            <calendar
                string="Service Request"
                date_start="date_start"
                date_stop="date_end"
                event_open_popup="true"
                color="name"
                mode="month">
                    <field name = "name"/>
                    <field name="sub"/>
                    <field name = "event"/>
            </calendar>
        </field>
    </record>

<!-- calendar activity -->

    <record id="calendar_activity_view" model="ir.ui.view">
        <field name="name">eventcalendar.activity</field>
        <field name="model">calendar.option</field>
        <field name="arch" type="xml">
            <activity string="Applicants">
                <templates>
                    <div t-name="activity-box">
                        <div>
                            <field name="name"/>
                        </div>
                    </div>
                </templates>
            </activity>
        </field>
    </record>


<!-- calendar action -->

    <record id="action_calendar_option" model="ir.actions.act_window">
       <field name="name">calendar option</field>
       <field name="res_model">calendar.option</field>
       <field name="view_mode">tree,form,calendar,activity</field>
    </record>


        <!-- hobbies form, list and action -->

<!-- hobbies action -->

    <record id="action_hobbies" model="ir.actions.act_window">
        <field name="name">hobbies</field>
        <field name="res_model">hobbies.selection</field>
        <field name="view_mode">tree,form</field>
    </record>

<!-- hobbies list -->

    <record id="hobbie_list_view" model="ir.ui.view">
        <field name="name">hobbies.list</field>
        <field name="model">hobbies.selection</field>
        <field name="arch" type="xml">
            <tree>
                <field name="hobbyselection" />
                <field name="studentlist" />
            </tree>
        </field>
    </record>

<!-- hobbies form -->

    <record id="hobbie_form_view" model="ir.ui.view">
        <field name="name">hobbies.form</field>
        <field name="model">hobbies.selection</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <h1>
                            <field name="hobbyselection" />
                            </h1>
                        </group>
                        <group string="many2many">
                            <field name="studentlist" widget="many2many" style="width: 940px !important;">
                                <tree>
                                    <field name="name"/>
                                    <field name="gender"/>
                                    <field name="studentschoolname"/>
                                </tree>
                            </field>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- attendance model with action -->

    <record id="action_attendance_option" model="ir.actions.act_window">
       <field name="name">Attendance option</field>
       <field name="res_model">attendance.option</field>
       <field name="view_mode">tree,form</field>
    </record>



    <record id="attendance_form_view" model="ir.ui.view">
        <field name="name">attendace.form</field>
        <field name="model">attendance.option</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="date" style="font-size:15pt;" widget="badge" decoration-primary="1"/>
                        <field name="schoolname" style="width: 940px !important;">
                            <tree>
                                 <field name = "name"/>
                            </tree>
                        </field>
                        <field name="studentlist" widget="one2many" style="width: 940px !important;">
                            <tree>
                                <field name = "name" />
                                <field name = "photo" widget="image" options="{'size': [70, 70]}"/>
                                <field name = "subject" />
                                <field name ="studentschoolname" />
                                <field name = "gender" />
                            </tree>
                        </field>

                           <field name ="student" style="width: 940px !important;">
                             <tree>
                                <field name = "name" />
                                <field name = "photo" widget="image" options="{'size': [70, 70]}"/>
                                <field name = "subject" />
                                <field name ="studentschoolname" />
                                <field name = "gender" />
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


     <record id="attendance_list_view" model="ir.ui.view">
        <field name="name">attendace.list</field>
        <field name="model">attendance.option</field>
        <field name="arch" type="xml">
            <tree>
                 <field name="schoolname" />
                <field name="studentlist" />
                <field name="date" />
                <field name ="student" />
            </tree>
        </field>
    </record>

</odoo>
