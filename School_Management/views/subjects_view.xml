<?xml version="1.0" encoding="utf-8"?>
 <odoo>

    <menuitem id="Subjects_sub_menu"
         name="Subjects"
         parent="school_menu_root"
         sequence="4"
        />

    <menuitem id="arts_sub_menu"
         name="Arts"
         action="action_arts_subject_option"
         parent="Subjects_sub_menu"
         sequence="1"
        />

    <menuitem id="commerce_sub_menu"
         name="Commerce"
         action="action_commerce_subject_option"
         parent="Subjects_sub_menu"
         sequence="2"
        />

    <menuitem id="science_sub_menu"
         name="Science"
         action="action_science_subject_option"
         parent="Subjects_sub_menu"
         sequence="3"
        />

        <!-- arts subject view and action -->

     <record id="action_arts_subject_option" model="ir.actions.act_window">
       <field name="name">Arts Subjects</field>
       <field name="res_model">subjects.arts</field>
       <field name="view_mode">tree,form</field>
    </record>


     <record id="subject_arts_form_view" model="ir.ui.view">
        <field name="name">Arts.Subjects.form</field>
        <field name="model">subjects.arts</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="artspart" />
                    </group>
                </sheet>
            </form>
            </field>
      </record>

      <record id="subject_arts_list_view" model="ir.ui.view">
        <field name="name">Arts.Subjects.list</field>
        <field name="model">subjects.arts</field>
        <field name="arch" type="xml">
            <tree>
                <field name="artspart" />
            </tree>
        </field>
    </record>
        <!-- commerce subject view and action -->

    <record id="action_commerce_subject_option" model="ir.actions.act_window">
       <field name="name">Commerce Subjects</field>
       <field name="res_model">subjects.commerce</field>
       <field name="view_mode">tree,form</field>
    </record>


     <record id="subject_commerce_form_view" model="ir.ui.view">
        <field name="name">Commerce.Subjects.form</field>
        <field name="model">subjects.commerce</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                         <field name="commercepart" />
                    </group>
                </sheet>
            </form>
            </field>
      </record>

      <record id="subject_commerce_list_view" model="ir.ui.view">
        <field name="name">Commerce.Subjects.list</field>
        <field name="model">subjects.commerce</field>
        <field name="arch" type="xml">
            <tree>
                <field name="commercepart" />
            </tree>
        </field>
    </record>

      <!-- science subject view and action -->

      <record id="action_science_subject_option" model="ir.actions.act_window">
       <field name="name">Science Subjects</field>
       <field name="res_model">subjects.science</field>
       <field name="view_mode">tree,form</field>
    </record>


     <record id="subject_science_form_view" model="ir.ui.view">
        <field name="name">Science.Subjects.form</field>
        <field name="model">subjects.science</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                         <field name="sciencepart" />
                    </group>
                </sheet>
            </form>
            </field>
      </record>

      <record id="subject_science_list_view" model="ir.ui.view">
        <field name="name">Science.Subjects.list</field>
        <field name="model">subjects.science</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sciencepart" />
            </tree>
        </field>
    </record>

</odoo>
