<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <!-- menu list -->

    <!-- option mainsub button -->

        <menuitem id="record_sub_menu"
         name="Manupulation(ORM)"
         parent="school_menu_root"
         sequence="5"
        />

        <menuitem id="create_record_sub_menu"
         name="Record Manupulation(ORM)"
         parent="record_sub_menu"
         action = "action_create_record"
         sequence="1"
        />

     <menuitem id="Feesstatus_sub_menu"
         name="Fees Status"
         parent="record_sub_menu"
         action = "action_fees_status"
         sequence="2"
        />


    <record id="action_create_record" model="ir.actions.act_window">
       <field name="name">create record</field>
       <field name="res_model">create.record</field>
       <field name="view_mode">form</field>
    </record>

    <record id="create_record_form_view" model="ir.ui.view">
        <field name="name">create record.form</field>
        <field name="model">create.record</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name= "name" />
                        <field name= "photo" widget="image" class="oe_avatar"/>
                        <field name= "rollno" />
                        <field name= "dob" />
                        <field name= "gender" />
                        <field name= "phone" />
                        <span>Browse/Delete/Write/Search</span>
                        <field name= "recid" />
                        <field name= "name1" />
                        <field name= "rollno1" />
                        <field name= "searchlist" />
                        <!-- <field name= "namelist" /> -->

                        <footer>
                        <button name ="action_insert_created_record" type="object" string="create record" class="btn-primary" style="margin-right:10px;" />
                        <button name ="action_update_created_record" type="object" string="write record" class="btn-success" style="margin-right:10px;"/>
                        <button name ="action_browse_created_record" type="object" string="browse record" class="btn-info" style="margin-right:10px;"/>
                        <button name ="action_unlink_created_record" type="object" string="delete record" class="btn-danger" style="margin-right:10px;"/>
                        <button name ="action_search_created_record" type="object" string="search record" class="btn-warning" style="margin-right:10px;"/>
                        <button string="cancel" class="btn-secondary" style="margin-top:10px;"/>
                        </footer>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <!-- Fees Status form and action (using inheritence) -->


    <record id="action_fees_status" model="ir.actions.act_window">
       <field name="name">Fees Status</field>
       <field name="res_model">inherit.fees</field>
       <field name="view_mode">tree,form</field>
    </record>


    <data>
        <record id="fees_status_form" model="ir.ui.view">
            <field name="name">Fees Inherit Form</field>
            <field name="model">inherit.fees</field>
            <field name= "inherit_id" ref= "School_Management.fees_form_view" />
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name ="feesstatus"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>


     <data>
        <record id="sale_work_inherit_form" model="ir.ui.view">
            <field name="name">Sale Work Inherit Form</field>
            <field name="model">sale.order</field>
            <field name= "inherit_id" ref= "sale.view_order_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name ="feesstatus"/>
                </xpath>
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name ="delivery_description"/>
                    <field name ="invoice_description"/>
                    <field name ="project_description"/>
                    <field name ="task_description"/>
                    <field name = "purchase_description"/>
                </xpath>
            </field>
        </record>
    </data>


    <data>
    <record id="delivery_order_inherit_form" model="ir.ui.view">
            <field name="name">Delivery Order Inherit Form</field>
            <field name="model">stock.picking</field>
            <field name= "inherit_id" ref= "stock.view_picking_form" />
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/group/group/field[@name='partner_id']" position="after">
                    <field name ="delivery_description"/>
                </xpath>
            </field>
        </record>
    </data>

    <data>
    <record id="invoice_inherit_form" model="ir.ui.view">
            <field name="name">Invoice Inherit Form</field>
            <field name="model">account.move</field>
            <field name= "inherit_id" ref= "account.view_move_form" />
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/group/group/field[@name='partner_id']" position="after">
                    <field name ="invoice_description"/>
                </xpath>
            </field>
        </record>
    </data>

    <data>
        <record id="fees_instructure_inherit_form" model="ir.ui.view">
            <field name="name">Fees status in structure form</field>
            <field name="model">fees.option</field>
            <field name= "inherit_id" ref= "School_Management.fees_form_view" />
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/group/group/field[@name='studentname']" position="after">
                    <field name ="feesstatus"/>
                </xpath>
            </field>
        </record>
    </data>

    <record model="ir.ui.view" id="sale_order_line_view_inherit">
        <field name="name">sale.order.line.view.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='product_id']" position="after">
                <field name="available"/>
            </xpath>
        </field>
    </record>

    <data>
    <record id="project_field_inherit_form" model="ir.ui.view">
            <field name="name">Project Inherit Form</field>
            <field name="model">project.project</field>
            <field name= "inherit_id" ref= "project.edit_project" />
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/group/group/field[@name='label_tasks']" position="after">
                    <field name ="project_description"/>
                </xpath>
            </field>
        </record>
    </data>

    <data>
    <record id="task_field_inherit_form" model="ir.ui.view">
            <field name="name">Task Inherit Form</field>
            <field name="model">project.task</field>
            <field name= "inherit_id" ref= "project.view_task_form2" />
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/group/group/field[@name='date_deadline']" position="after">
                    <field name ="task_description"/>
                </xpath>
            </field>
        </record>
    </data>


    <data>
    <record id="purchase_order_inherit_form" model="ir.ui.view">
            <field name="name">Purchase Order Form</field>
            <field name="model">purchase.order</field>
            <field name= "inherit_id" ref= "purchase.purchase_order_form" />
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/group/group/field[@name='partner_id']" position="after">
                    <field name ="purchase_description"/>
                </xpath>
            </field>
        </record>
    </data>


</odoo>

