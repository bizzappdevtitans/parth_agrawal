<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="create_data_wizard_form_view" model="ir.ui.view">
        <field name="name">create data wizard form</field>
        <field name="model">create.data.wizard</field>
        <field name="arch" type="xml">
            <form string= "create new data(Assignment)">
                <sheet>
                    <group>
                    <field name="name" />
                    <field name="note" />
                    <field name="date" />
                </group>
                <footer>
                    <button name= "action_on_click_create" string="Create" class="btn-primary" type="object" />
                    <button string="cancel" class="btn-secondary" special="cancel"/>
                </footer>
                </sheet>
            </form>
        </field>
    </record>

     <record id="action_create_data_wizard" model="ir.actions.act_window">
       <field name="name">create data wizard (Assignment)</field>
       <field name="res_model">create.data.wizard</field>
       <field name="view_mode">form</field>
       <field name="view_id" ref="create_data_wizard_form_view"/>
       <field name="target">new</field>
    </record>

</odoo>
