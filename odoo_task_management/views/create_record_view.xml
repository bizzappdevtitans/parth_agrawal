<?xml version="1.0" encoding="utf-8"?>
<odoo>


      <record id="inherited_product_purchase_form" model="ir.ui.view">
            <field name="name">Product Form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='invoicing']" position="after">

                <page string="Purchase Order History">
                    <field name="purchase_order_data" string="Purchase Order Data"/>
                </page>
                 <page string="Sale Order History">
                    <field name="sale_order_data" string="Sale Order Data"/>
                </page>
                <page string="Attachment Count">
                    <field name="attachment_ids" string="Attachment Data"/>
                </page>

                </xpath>
            </field>
     </record>

      <record id="sale_order_view_inherit" model="ir.ui.view">
        <field name="name">sale.order.view.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="attachment_count"  style="width: 900px !important;"/>
                <field name="custom_field"  style="width: 900px !important;"/>
            </xpath>
        </field>
    </record>

    <record id="sale_order_line_view_inherit" model="ir.ui.view">
        <field name="name">sale.order.line.view.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='name']" position="after">
                <field name="custom_field"/>
            </xpath>
        </field>
    </record>

</odoo>
