    <!-- student marksheet form,list and action -->

    <record id="action_student_marksheet" model="ir.actions.act_window">
        <field name="name">Student Marksheet</field>
        <field name="res_model">marksheet.option</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="marksheet_form_view" model="ir.ui.view">
        <field name="name">studentmarksheet.form</field>
        <field name="model">marksheet.option</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" text="Marksheet" bg_color="bg-info" />
                    <group>
                        <group>
                        <field name="reference_no" style="font-size:15pt;" widget="badge" decoration-danger="1"/>
                        <field name="studentname_id" />
                        <field name="schoolname_id" />
                        <field name="rollno" />
                        <field name="department_id" /><br></br>
                        <field name="standard" />
                        <field name = "semester" />
                    </group>
                                 <group  attrs="{'invisible': [('department_id', '!=', 21)]}">
                                    <field name="geography" options='{"type": "number", "step": 1}'/>
                                    <field name="history" options='{"type": "number", "step": 1}'/>
                                    <field name="economics_arts" options='{"type": "number", "step": 1}' />
                                    <field name= "political_science" options='{"type": "number", "step": 1}'/>
                                    <field name = "sociology" options='{"type": "number", "step": 1}'/>
                                    <field name ="philosophy" options='{"type": "number", "step": 1}'/>
                                    <field name ="psychology" options='{"type": "number", "step": 1}'/>
                                    <field name ="artstotal" />
                                    <field name ="arts_percentage" />
                                    <field name="artsgrade" decoration-info = "1"  widget="badge" decoration-bf="1"/>
                                    <field name ="artsresult" decoration-primary = "1"  widget="badge" decoration-bf="1"/>
                                </group>

                                <group attrs="{'invisible': [('department_id', '!=', 19)]}">
                                    <field name="biology" options='{"type": "number", "step": 1}' />
                                    <field name= "chemistry" options='{"type": "number", "step": 1}'/>
                                    <field name = "mathemetics" options='{"type": "number", "step": 1}' />
                                    <field name ="physics" options='{"type": "number", "step": 1}'/>
                                    <field name ="english_science" options='{"type": "number", "step": 1}'/>
                                    <field name ="sciencetotal" />
                                    <field name ="science_percentage" />
                                    <field name="sciencegrade" decoration-info = "1"  widget="badge" decoration-bf="1" />
                                    <field name ="scienceresult" decoration-primary = "1"  widget="badge" decoration-bf="1" />
                                </group>

                                 <group attrs="{'invisible': [('department_id', '!=', 20)]}">
                                    <field name="accounts" options='{"type": "number", "step": 1}'/>
                                    <field name= "statistics" options='{"type": "number", "step": 1}'/>
                                    <field name = "business_studies" options='{"type": "number", "step": 1}'/>
                                    <field name ="economics_commerce" options='{"type": "number", "step": 1}'/>
                                    <field name ="english_commerce" options='{"type": "number", "step": 1}'/>
                                    <field name ="commercetotal" />
                                    <field name ="commerce_percentage" />
                                    <field name="commercegrade" decoration-info = "1"  widget="badge" decoration-bf="1" />
                                    <field name ="commerceresult" decoration-primary = "1"  widget="badge" decoration-bf="1" />
                                </group>

                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="marksheet_list_view" model="ir.ui.view">
        <field name="name">studentmarksheet.form</field>
        <field name="model">marksheet.option</field>
        <field name="arch" type="xml">
            <tree>
                <field name="reference_no" decoration-bf="1"  decoration-success="department_id == 19" decoration-warning="department_id==20" decoration-danger="department_id == 21" />
                <field name="studentname_id"/>
                <field name="department_id" decoration-bf="1"  decoration-success="department_id == 19" decoration-warning="department_id==20" decoration-danger="department_id == 21" />
                <field name="standard" />
                <field name = "semester" />
            </tree>
        </field>
    </record>

