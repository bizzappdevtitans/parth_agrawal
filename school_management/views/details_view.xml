<!-- student form -->

      <record id="student_form_view" model="ir.ui.view">
        <field name="name">student.form</field>
        <field name="model">student.profile</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name= "action_send_email" type= "object" string="Send Email" class="oe_highlight"/>
                </header>
                <sheet>
                      <div class="oe_button_box" name="button_box">
                        <button class=" oe_stat_button" width="380" height="40" name="action_school_profile" type="object" icon="fa-home">
                            <span widget="statinfo">Schoolname:</span>
                            <field name="student_school_name_id" />
                        </button>
                        <button class=" oe_stat_button" width="200" height="40" name="action_student_marksheet" type="object" icon="fa-files-o">
                            <span widget="statinfo">My Marksheet</span>
                            <field name="marksheetcount" />
                        </button>
                        <button class=" oe_stat_button" width="200" height="40" name="action_fees_option" type="object" icon="fa-rupee">
                            <span widget="statinfo">Fees</span>
                            <field name="feescount" />
                        </button>
                    </div>
                    <group>

                            <field name = "reference_no" style="font-size:15pt;" widget="badge" decoration-success="1"/>
                            <field name = "name" />
                            <field name = "photo" widget="image" class="oe_avatar" options="{'size': [88, 88]}"/>
                            <field name ="rollno" options="{'format': 0}"/>
                            <field name ="marksheetcount" />
                            <field name ="feescount" />
                            <field name = "subject_id" />
                            <field name = "dob"/>
                            <field name = "studentemail" />
                            <field name = "message" readonly='1'/>
                            <field name = "phone" widget="phone"/>
                            <field name = "gender" />
                            <field name = "totalmarks" />
                            <field name = "percentage" />
                            <field name = "redirect" />
                            <field name = "signature" widget="signature" class="oe_avatar" options="{'size': [180, 250]}" />
                            <field name = "document" type="application/pdf" />
                            <field name ="student_school_name_id"/>
                            <field name = "hobby_ids"  widget="many2many_tags" options="{'no_quick_create': False}"/>
                    </group>
                </sheet>
            </form>
        </field>
      </record>
