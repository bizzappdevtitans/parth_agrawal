<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- menu list -->
    <!-- option mainsub button -->
   <menuitem id="record_sub_menu" name="Manupulation(ORM)" parent="school_menu_root" sequence="5" groups="school_management.group_school_admin"/>
    <menuitem action="action_create_record" id="create_record_sub_menu" name="Record Manupulation(ORM)" parent="record_sub_menu" sequence="1"/>
    <menuitem action="action_fees_status" id="Feesstatus_sub_menu" name="Fees Status" parent="record_sub_menu" sequence="2"/>
    <menuitem action="action_create_data_wizard" id="create_data_sub_menu" name="Create Data Wizard" parent="record_sub_menu" sequence="3"/>

    <record id="action_create_record" model="ir.actions.act_window">
        <field name="name">create record</field>
        <field name="res_model">create.record</field>
        <field name="view_mode">form</field>
    </record>

    <record id="create_record_form_view" model="ir.ui.view">
        <field name="name">create record.form</field>
        <field name="model">create.record</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button class="btn-primary" name="%(action_create_data_wizard)d" string="create wizard(assignment)" type="action"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field class="oe_avatar" name="photo" widget="image"/>
                        <field name="rollno"/>
                        <field name="dob"/>
                        <field name="gender"/>
                        <field name="phone"/>
                        <span>Write/Browse/Delete/Search</span>
                        <field name="recid"/>
                        <field name="name_orm"/>
                        <field name="rollno_orm"/>
                        <field name="searchlist"/>
                        <!-- <field name= "namelist" />-->
                         <footer>
                            <button class="btn-primary" name="action_insert_created_record" string="create record" style="margin-right:10px;" type="object"/>
                            <button class="btn-success" name="compute_action_update_created_record" string="write record" style="margin-right:10px;" type="object"/>
                            <button class="btn-info" name="compute_action_browse_created_record" string="browse record" style="margin-right:10px;" type="object"/>
                            <button class="btn-danger" name="compute_action_unlink_created_record" string="delete record" style="margin-right:10px;" type="object"/>
                            <button class="btn-warning" name="action_search_created_record" string="search record" style="margin-right:10px;" type="object"/>
                            <button class="btn-secondary" string="cancel" style="margin-top:10px;"/>
                        </footer>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Fees Status form and action (using inheritence) -->

      <record id="action_fees_status" model="ir.actions.act_window">
        <field name="name">Fees Status</field>
        <field name="res_model">inherit.fees</field>
        <field name="view_mode">tree,form</field>
    </record>
     <data>
        <record id="fees_status_form" model="ir.ui.view">
            <field name="name">Fees Inherit Form</field>
            <field name="model">inherit.fees</field>
            <field name="inherit_id" ref="school_management.fees_form_view"/>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="feesstatus"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
    <data>
        <record id="sale_work_inherit_form" model="ir.ui.view">
            <field name="name">Sale Work Inherit Form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="feesstatus"/>
                </xpath>
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="delivery_description"/>
                    <field name="invoice_description"/>
                    <field name="project_description"/>
                    <field name="task_description"/>
                    <field name="purchase_description"/>
                    <field name="manufacturing_description"/>
                </xpath>
            </field>
        </record>
    </data>
    <data>
        <record id="delivery_order_inherit_form" model="ir.ui.view">
            <field name="name">Delivery Order Inherit Form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/group/group/field[@name='partner_id']" position="after">
                    <field name="delivery_description"/>
                </xpath>
            </field>
        </record>
    </data>
    <data>
        <record id="invoice_inherit_form" model="ir.ui.view">
            <field name="name">Invoice Inherit Form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/group/group/field[@name='partner_id']" position="after">
                    <field name="invoice_description"/>
                </xpath>
            </field>
        </record>
    </data>
    <data>
        <record id="fees_instructure_inherit_form" model="ir.ui.view">
            <field name="name">Fees status in structure form</field>
            <field name="model">fees.option</field>
            <field name="inherit_id" ref="school_management.fees_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/group/group/field[@name='studentname']" position="after">
                    <field name="feesstatus"/>
                </xpath>
            </field>
        </record>
    </data>
    <record id="sale_order_line_view_inherit" model="ir.ui.view">
        <field name="name">sale.order.line.view.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='product_id']" position="after">
                <field name="available"/>
            </xpath>
        </field>
    </record>
    <data>
        <record id="project_field_inherit_form" model="ir.ui.view">
            <field name="name">Project Inherit Form</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/group/group/field[@name='label_tasks']" position="after">
                    <field name="project_description"/>
                </xpath>
            </field>
        </record>
    </data>
    <data>
        <record id="task_field_inherit_form" model="ir.ui.view">
            <field name="name">Task Inherit Form</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/group/group/field[@name='date_deadline']" position="after">
                    <field name="task_description"/>
                </xpath>
            </field>
        </record>
    </data>
    <data>
        <record id="purchase_order_inherit_form" model="ir.ui.view">
            <field name="name">Purchase Order Form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/group/group/field[@name='partner_id']" position="after">
                    <field name="purchase_des"/>
                </xpath>
            </field>
        </record>
    </data>
    <data>
        <record id="manufacturing_inherit_form" model="ir.ui.view">
            <field name="name">Manufacturing Order Form</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/group/group/field[@name='product_id']" position="after">
                    <field name="manufacturing_description"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
