<?xml version="1.0" encoding="utf-8"?>
 <odoo>

     <!-- menulist -->

<!-- studycorner mainsub button -->

     <menuitem id="studycorner_sub_menu"
         name="Study Corner"
         parent="school_menu_root"
         sequence="3"
        />

<!-- assignment sub button -->

       <menuitem id="assignment_sub_menu"
         name="Assignment"
         action="action_assignment_option"
         parent="studycorner_sub_menu"
         sequence="1"
        />

<!-- addmission sub button -->

      <menuitem id="addmission_sub_menu"
         name="Addmission"
         action="action_addmission_option"
         parent="studycorner_sub_menu"
         sequence="2"
        />

<!-- department sub button -->

       <menuitem id="department_sub_menu"
         name="Department"
         action="action_department_option"
         parent="studycorner_sub_menu"
         sequence="3"
        />

<!-- fees sub button -->

     <menuitem id="fees_sub_menu"
         name="Fees Structure"
         action="action_fees_option"
         parent="studycorner_sub_menu"
         sequence="4"
        />

      <!-- assignment tree, form and action -->

<!-- assignment action -->

    <record id="action_assignment_option" model="ir.actions.act_window">
       <field name="name">assignment option</field>
       <field name="res_model">assignment.option</field>
       <field name="view_mode">tree,form</field>
    </record>

<!-- assignment list -->

     <record id="assignment_list_view" model="ir.ui.view">
        <field name="name">assignment.list</field>
        <field name="model">assignment.option</field>
        <field name="arch" type="xml">
            <tree>
                <field name = "studentname_id" />
                <field name = "teachername_id"/>
                <field name = "department_id"/>
                <field name = "duedate"/>
                <field name = "submit" widget="boolean_toggle" groups="school_management.group_school_teacher"/>
                <field name = "submit_student_side" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

<!-- assignment form -->

    <record id="assignment_form_view" model="ir.ui.view">
        <field name="name">assignment.form</field>
        <field name="model">assignment.option</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" text="assignment" bg_color="bg-info" />
                        <group>
                            <group>
                                <field name = "studentname_id"/>
                                <field name = "teachername_id"/>
                                <field name = "department_id" />
                                <field name = "gender" />
                                <field name = "alert_message" readonly = "1"/>
                            </group>
                            <group>
                            </group>
                        <notebook>
                            <page string="subject">
                                <group>
                                    <field name = "subject_arts" attrs="{'invisible': [('department_id', '!=', 21)]}"/>
                                    <field name = "subject_science" attrs="{'invisible': [('department_id', '!=', 19)]}"/>
                                    <field name = "subject_commerce" attrs="{'invisible': [('department_id', '!=', 20)]}"/>
                                    <field name = "note"/>
                                    <field name = "Questions" type="application/pdf" />
                                </group>
                            </page>
                            <page string="submission">
                                <group>
                                    <field name = "duedate" />
                                    <field name = "today" readonly="1" />
                                    <field name = "Task" />
                                    <field name = "submit" widget="boolean_toggle" groups="school_management.group_school_teacher" />
                                    <field name = "submit_student_side" widget="boolean_toggle"/>
                                </group>
                            </page>
                        </notebook>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>


    <!-- Addmission tree, form and action -->

<!-- addmission action -->

     <record id="action_addmission_option" model="ir.actions.act_window">
       <field name="name">addmission option</field>
       <field name="res_model">addmission.option</field>
       <field name="view_mode">tree,form</field>
    </record>


<!-- addmission list -->

    <record id="addmission_list_view" model="ir.ui.view">
        <field name="name">addmission.list</field>
        <field name="model">addmission.option</field>
        <field name="arch" type="xml">
            <tree>
                <field name = "name"/>
                <field name = "standard_id"/>
                <field name = "age"/>
                <field name = "gender"/>
                <field name = "phone" />
                <field name ="email" />
                <field name = "schoolname_id"/>
                <field name = "percentage" />
                <field name="state" decoration-success="state =='confirmed'" decoration-info="state =='done'" decoration-danger="state =='cancel'" decoration-warning="state =='draft'" widget="badge" />
            </tree>
        </field>
    </record>

<!-- addmission form -->

     <record id="addmission_form_view" model="ir.ui.view">
        <field name="name">addmission.form</field>
        <field name="model">addmission.option</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name= "action_confirm" type= "object" string="submit" class="oe_highlight" attrs="{'invisible': [('disable_button', '=', True)]}"/>
                    <button name= "action_cancel" type= "object" string="cancel" class="oe_highlight" groups="school_management.group_school_teacher"/>
                    <button name= "action_confirm_admission" type= "object" string="confirm admission" class="oe_highlight" groups="school_management.group_school_teacher"/>
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <widget name="web_ribbon" text="Addmission Form" bg_color="bg-primary" />
                    <group>
                        <group>
                            <field name = "disable_button" invisible="1"/>
                            <field name = "name" placeholder="Your Name" style="font-size:13pt;" />
                            <field name = "address" />
                            <field name ="pincode" options="{'format': 0}" />
                            </group>
                        <group>
                            <field name = "father"/>
                            <field name = "mother"/>
                            <field name = "photo" class="oe_avatar" widget="image" options="{'size': [70, 70]}"/>
                        </group>

                        <notebook>
                            <page string="general">
                                <group>
                                <field name= "occupation_select" widget="radio" />
                                <field name = "occupation"/>
                                <field name = "dob"/>
                                <field name = "age" />
                            </group>
                            </page>
                            <page string="personal">
                                <group>

                                <field name = "standard_id"/>
                                <field name = "phone" />
                                <field name = "email" />
                                <field name = "gender"/>
                            </group>
                            </page>
                            <page string="other">
                                <group>
                                <field name = "problem" widget="radio"/>
                                <field name = "specify" />
                                <field name = "hobby_ids" widget="many2many_tags" />
                            </group>
                            </page>

                            <page string="education">
                                <group>
                                <field name = "schoolname_id"/>
                                <field name = "studentcount" />
                                <field name = "signature" widget="signature" class="oe_avatar" options="{'size': [130, 200]}"/>
                                <field name = "document" type="application/pdf"/>
                            </group>
                            </page>
                            <page string="Filup Mark">
                                <group>
                                <field name = "maths" options='{"type": "number", "step": 1}'/>
                                <field name = "science" options='{"type": "number", "step": 1}' />
                                <field name = "english" options='{"type": "number", "step": 1}'/>
                                <field name = "hindi_gujarati" options='{"type": "number", "step": 1}'/>
                                <field name = "total" />
                                <field name = "percentage" />
                            </group>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

       <!-- Department tree, form and action -->

<!-- Departments action -->

    <record id="action_department_option" model="ir.actions.act_window">
       <field name="name">department option</field>
       <field name="res_model">department.option</field>
       <field name="view_mode">tree,form</field>
    </record>

    <!-- department list -->

     <record id="department_list_view" model="ir.ui.view">
        <field name="name">department.list</field>
        <field name="model">department.option</field>
        <field name="arch" type="xml">
            <tree>
                <field name = "field"/>
                <field name = "admission_student_ids" string="Enrollment request" />
                <field name="current_student_ids" />
            </tree>
        </field>
    </record>

    <record id="department_form_view" model="ir.ui.view">
        <field name="name">department.form</field>
        <field name="model">department.option</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class=" oe_stat_button" width="200" name="action_student_profile" type="object" icon="fa-users">
                            <span>ExistingStudent=</span>
                            <field string="EnrolledStudents" name="enrolled_student_count" widget="statinfo" />
                        </button>


                        <button class=" oe_stat_button" width="200" name="action_addmission_option" type="object" icon="fa-bullhorn">
                            <span>AdmissionRequest=</span>
                            <field string="EnrolledStudents" name="request_student_count" widget="statinfo" />
                        </button>
                    </div>
                    <group>
                        <h1>
                        <group>
                        <field name = "field" />
                        <field name ="enrolled_student_count" />
                        <field name = "request_student_count" />
                        <!-- <field name ="rate" /> -->
                        </group>
                          </h1>
                    <group>
                    </group>
                    <notebook>
                        <page string="addmission Form">
                    <group>
                        <field name = "admission_student_ids" style="width: 940px !important;"/>
                    </group>
                </page>
                <page string ="Existing students">
                    <group>
                        <field name="current_student_ids" style="width: 940px !important;" >
                            <tree>
                                    <field name="name"/>
                                    <field name="photo" widget="image" options="{'size': [50, 50]}"/>
                                    <field name="subject_id"/>
                                    <field name="gender"/>
                                    <field name= "percentage" widget="percentpie"/>
                                    <field name="hobby_ids" widget="many2many_tags"/>
                            </tree>
                    </field>
                    </group>
                </page>
            </notebook>
                </group>
                </sheet>
            </form>
        </field>
    </record>

        <!-- fees tree,form and action -->

    <record id="action_fees_option" model="ir.actions.act_window">
       <field name="name">fees option</field>
       <field name="res_model">fees.option</field>
       <field name="view_mode">tree,form</field>
    </record>

<!-- fees list -->

    <record id="fees_list_view" model="ir.ui.view">
        <field name="name">fees.list</field>
        <field name="model">fees.option</field>
        <field name="arch" type="xml">
        <tree decoration-bf="1"  decoration-success="department == 19" decoration-warning="department==20" decoration-danger="department == 21">
                <field name = "reference_no" decoration-bf="1"/>
                <field name ="studentname" />
                <field name ="phoneno" />
                <field name ="schoolname"/>
                <field name ="department" />
                <field name ="grandtotal" decoration-warning = "1"  widget="badge" decoration-bf="1"/>
            </tree>
        </field>
    </record>

    <record id="fees_form_view" model="ir.ui.view">
        <field name="name"> fees.form </field>
        <field name="model">fees.option</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>

                        <group string="Student Info">
                        <field name = "reference_no" style="font-size:15pt;" widget="badge" decoration-info="1"/>
                        <field name ="studentname"/>
                        <field name ="student_image" widget="image" class="oe_avatar" />
                        <field name ="phoneno"/>
                        <field name ="department" />
                        </group>

                        <group string="School Info">
                        <field name ="schoolname"/>
                        <field name ="address_school"/>
                        <field name ="website_school"/>
                        <field name ="email_school"/>
                        <field name ="phone_school"/>
                        </group>

                        <separator string="Fees structure" />
                        <group style="color:#FF6C00;font-size:11pt;" class="text-center">
                        <field name = "department_fees" widget="monetary"/>
                        <field name ="tuition" widget="monetary"/>
                        <field name ="library" widget="monetary"/>
                        <field name ="transport" widget="monetary"/>
                        <field name ="stationary" widget="monetary"/>
                        <field name ="security" widget="monetary"/>
                        <field name ="admission" widget="monetary"/>
                        <field name ="other" widget="monetary"/>
                        <label for="grandtotal" widget="monetary"/>
                        <div>
                            <field name ="grandtotal"  widget="monetary" decoration-primary = "1" decoration-bf="1" class="oe_inline"/>₹
                        </div>
                    </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
